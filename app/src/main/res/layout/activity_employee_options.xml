<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/up"
    tools:context=".activities.EmployeeOptions">

    <TextView
        android:id="@+id/textView"
        android:layout_width="296dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/amaranth"
        android:text="Options de la succursale"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/add_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_service"
        android:layout_width="249dp"
        android:layout_height="57dp"
        android:background="@drawable/shape"
        android:text="Ajouter des services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <Button
        android:id="@+id/schedule"
        android:layout_width="249dp"
        android:layout_height="57dp"
        android:layout_marginBottom="288dp"
        android:background="@drawable/shape"
        android:text="Horaires"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_service"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_service"
        app:layout_constraintTop_toBottomOf="@+id/add_service" />

    <Button
        android:id="@+id/request"
        android:layout_width="251dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape"
        android:text="Consulter les demandes"
        app:layout_constraintEnd_toEndOf="@+id/schedule"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="@+id/schedule"
        app:layout_constraintTop_toBottomOf="@+id/schedule" />

    <Button
        android:id="@+id/serviceAvailable"
        android:layout_width="248dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape"
        android:text="Services disponibles"
        app:layout_constraintBottom_toTopOf="@+id/add_service"
        app:layout_constraintEnd_toEndOf="@+id/add_service"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_service"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.764" />
</androidx.constraintlayout.widget.ConstraintLayout>